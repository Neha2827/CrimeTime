<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkviolet"
    tools:context=".Admin_missing_complain_page">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:text="MISSINGCOMPLAINTS"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textColor="@color/lightviolet"
        android:background="#F1EFDE"
        android:id="@+id/tv_head"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_head"
        android:layout_margin="10dp"
        android:id="@+id/rv_missing_complain_Page"/>


</RelativeLayout>