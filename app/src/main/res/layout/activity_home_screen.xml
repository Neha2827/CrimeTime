<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkviolet"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".HomeScreen">

    <Button
        android:id="@+id/launch_complain"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:background="@drawable/button"
        android:text="Launch Complain"
        android:layout_margin="20dp"
        android:fontFamily="@font/sitkasmall"
        android:textColor="@color/White"
        android:textSize="26dp"/>
    <Button
        android:id="@+id/missing_complain"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:background="@drawable/button"
        android:text="My Missing Complain"
        android:layout_margin="20dp"
        android:fontFamily="@font/sitkasmall"
        android:textColor="@color/White"
        android:textSize="26dp"/>


    <Button
        android:id="@+id/mycomplain"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:background="@drawable/button"
        android:text="My Complain"
        android:layout_margin="20dp"
        android:fontFamily="@font/sitkasmall"
        android:textColor="@color/White"
        android:textSize="26dp"/>

    <Button
        android:id="@+id/report"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:background="@drawable/button"
        android:text="NEWS REPORT"
        android:fontFamily="@font/sitkasmall"
        android:layout_margin="20dp"
        android:textColor="@color/White"
        android:textSize="26dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:onClick="onLogoutClicked"
        android:src="@drawable/ic_logout"
        android:layout_width="100dp"
        android:layout_height="50dp"/>

</LinearLayout>