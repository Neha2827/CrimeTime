<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AdminRegister">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">



    <EditText
        android:id="@+id/user_reg"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/buttom_signin"
        android:hint="Enter your Name"
        android:drawableLeft="@drawable/ic_user_reg"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/White"
        android:textAlignment="center"
        android:textSize="20dp"/>

        <EditText
            android:id="@+id/email_reg"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/buttom_signin"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:drawablePadding="8dp"
            android:padding="10dp"
            android:hint="Enter your Email"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/White"
            android:textAlignment="center"
            android:textSize="20dp"/>

    <EditText
        android:id="@+id/police_id"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/buttom_signin"
        android:drawableLeft="@drawable/ic_star"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:hint="Enter your Police id"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/White"
        android:textAlignment="center"
       />

        <EditText
            android:id="@+id/police_station"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/buttom_signin"
            android:drawableLeft="@drawable/ic_star"
            android:drawablePadding="8dp"
            android:padding="10dp"
            android:hint="Enter Police Station Pincode "
            android:layout_marginTop="20dp"
            android:textColorHint="@color/White"
            android:textAlignment="center"
            />


        <Button
            android:id="@+id/admin_register"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:text="Request for Admin"
            android:background="@drawable/button"
            android:padding="4dp"
            android:textColor="@color/White"/>
    </LinearLayout>

</FrameLayout>