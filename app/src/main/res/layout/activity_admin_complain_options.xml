<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkviolet"
    tools:context=".AdminComplainOptions">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:layout_margin="10dp"
        android:textSize="24dp"
        android:textColor="@color/White"
        android:text="Compalain 102"
        android:padding="8dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/White"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        android:text="User Details with complain"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/verified"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/yellow_btn"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:alpha=".50"
            android:textColor="@color/White"
            android:fontFamily="@font/sitkasmall"
            android:layout_alignParentLeft="true"
            android:text="Verified"/>

        <Button
            android:id="@+id/rejected"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/red_btn"
            android:alpha="0.5"
            android:fontFamily="@font/sitkasmall"
            android:textColor="@color/White"
            android:layout_toRightOf="@id/verified"
            android:layout_alignParentRight="true"
            android:text="rejected"/>

        <Button
            android:id="@+id/solved"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/verified"
            android:layout_centerHorizontal="true"
            android:alpha="0.5"
            android:fontFamily="@font/sitkasmall"
            android:textColor="@color/White"
            android:background="@drawable/green_btn"
            android:layout_marginTop="30dp"
            android:text="Solved"/>
    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>