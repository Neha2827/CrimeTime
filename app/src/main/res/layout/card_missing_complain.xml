<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardBackgroundColor="#EAE8DC"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="10dp">
   <LinearLayout
       android:paddingStart="10dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <ImageView
           android:id="@+id/img_view_missing_person"
           android:layout_gravity="center"
           android:layout_width="200dp"
           android:layout_height="150dp"/>
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       <TextView
           android:id="@+id/tv_mscn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="COMPLAIN NO : "
           android:textColor="#000000"
           android:textStyle="bold"
           android:textSize="25sp"
           android:layout_marginTop="10dp"/>

           <TextView
               android:layout_marginTop="10dp"
               android:text="dhlhyrhlkjkggghjfyjdg"
               android:layout_marginStart="10dp"
               android:layout_toEndOf="@+id/tv_mscn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_missing_complain_no"/>
       </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="COMPLAINT DATE:"
           android:textColor="#000000"
           android:textStyle="bold"
           android:textSize="25sp"
           android:layout_marginTop="10dp"
           android:id="@+id/tv_cd"/>
       <TextView
           android:inputType="date"
           android:layout_marginTop="10dp"
           android:text="dhlhyrhlkjkggghjfyjdg"
           android:layout_marginStart="10dp"
           android:layout_toEndOf="@+id/tv_cd"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tv_complain_date"/></RelativeLayout>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:textColor="#000000"
           android:textStyle="bold"
           android:textSize="25sp"
           android:layout_marginTop="10dp"

           android:text="MISSING PERSON'S DETAILS"/>
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="NAME: "
           android:textColor="#000000"
           android:textStyle="bold"
           android:textSize="25sp"
           android:layout_marginTop="10dp"
           android:id="@+id/tv_mn"/>
           <TextView
               android:layout_marginTop="10dp"
               android:text="dhlhyrhlkjkggghjfyjdg"
               android:layout_marginStart="10dp"
               android:layout_toEndOf="@+id/tv_mn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_missing_person_name"/>
       </RelativeLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="HEIGHT:"
               android:textColor="#000000"
               android:textStyle="bold"
               android:textSize="25sp"
               android:layout_marginTop="10dp"
               android:id="@+id/mh"/>
               <TextView
                   android:inputType="number"
                   android:layout_marginTop="10dp"
                   android:text="672568900"
                   android:layout_marginStart="10dp"
                   android:layout_toEndOf="@+id/mh"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/tv_missing_height"/>
           </RelativeLayout>
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="100dp">
           <TextView

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="AGE:"
               android:textColor="#000000"
               android:textStyle="bold"
               android:textSize="25sp"
               android:layout_marginTop="10dp"
               android:id="@+id/ms_age"/>
               <TextView
                   android:inputType="number"
                   android:layout_marginTop="10dp"
                   android:text="black"
                   android:layout_marginStart="5dp"
                   android:layout_toEndOf="@+id/ms_age"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/tv_missing_age"/>



           </RelativeLayout>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="COLOR:"
               android:textColor="#000000"
               android:textStyle="bold"
               android:textSize="25sp"
               android:layout_marginTop="10dp"
               android:id="@+id/tv_mis_cp"/>
           <TextView
               android:layout_marginTop="10dp"
               android:text="black"
               android:layout_marginStart="5dp"
               android:layout_toEndOf="@+id/tv_mis_cp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_missing_complexion"/>
           </RelativeLayout>

           <RelativeLayout
               android:layout_marginStart="30dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
           <TextView
               android:layout_marginStart="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="HAIR:"
               android:textColor="#000000"
               android:textStyle="bold"
               android:textSize="25sp"
               android:layout_marginTop="10dp"
               android:id="@+id/tv_mh"/>
               <TextView
                   android:layout_marginTop="10dp"
                   android:text="curl"
                   android:layout_marginStart="10dp"
                   android:layout_toEndOf="@+id/tv_mh"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/tv_missing_hair"/>

           </RelativeLayout>



       </LinearLayout>
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="LAST SEEN AT : "
           android:textColor="#000000"
           android:textStyle="bold"
           android:textSize="25sp"
           android:layout_marginTop="10dp"
           android:id="@+id/tv_mp"/>
           <TextView
               android:layout_marginTop="10dp"
               android:text="dhlhyrhlkjkggghjfyjdg"
               android:layout_marginStart="10dp"
               android:layout_toEndOf="@+id/tv_mp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_missing_place"/>
       </RelativeLayout>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="COMPLAINER DETAILS : "
           android:textColor="#000000"
           android:textStyle="bold"
           android:textSize="25sp"
           android:layout_marginTop="10dp"
           />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="NAME : "
           android:textColor="#000000"
           android:textStyle="bold"
           android:textSize="25sp"
           android:layout_marginTop="10dp"
           android:id="@+id/compl_nm"/>
    <TextView
        android:layout_marginTop="10dp"
        android:text="dhlhyrhlkjkggghjfyjdg"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/compl_nm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_complainer_name"/>
</RelativeLayout>
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="PHONE: "
           android:textColor="#000000"
           android:textStyle="bold"
           android:textSize="25sp"
           android:layout_marginTop="10dp"
           android:id="@+id/tv_cp"/>
           <TextView
               android:layout_marginTop="10dp"
               android:text="dhlhyrhlkjkggghjfyjdg"
               android:layout_marginStart="10dp"
               android:layout_toEndOf="@+id/tv_cp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_complainer_phone"/>

       </RelativeLayout>
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="PINCODE: "
           android:textColor="#000000"
           android:textStyle="bold"
           android:textSize="25sp"
           android:layout_marginTop="10dp"
           android:id="@+id/tv_co_pin"/>
           <TextView
               android:layout_marginTop="10dp"
               android:text="dhlhyrhlkjkggghjfyjdg"
               android:layout_marginStart="10dp"
               android:layout_toEndOf="@+id/tv_co_pin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/tv_complainer_pin"/>
       </RelativeLayout>


   </LinearLayout>

</androidx.cardview.widget.CardView>